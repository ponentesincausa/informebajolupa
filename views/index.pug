			.third.padd-20.select.center
				a(href="guadalajara")
					img(class="escudo"  src="../src/img/guadalajara.png")
					h4 En Guadalajara
					br
					- var guadalajaratotal = 0;
					- var guadalajarafalso = 0;
					- var guadalajaraverdadero = 0;
					- var guadalajaraomisiones = 0;
					- var guadalajaradificil = 0;
					for row in guadalajara
						- guadalajaratotal +=1
						- guadalajaradificil = guadalajaratotal - guadalajarafalso - guadalajaraverdadero - guadalajaraomisiones

						if (row.Veredicto === "falso")
							- guadalajarafalso += 1
						if (row.Veredicto === "verdadero")
							- guadalajaraverdadero +=1
						if (row.Veredicto === "omisiones")
							- guadalajaraomisiones += 1
					p Afirmaciones falsas : #{guadalajarafalso}
					p Afirmaciones verdaderas: #{guadalajaraverdadero}
					p Engañoso o con problemas para verificar: #{guadalajaradificil}
					p Omisiones: #{guadalajaraomisiones}
