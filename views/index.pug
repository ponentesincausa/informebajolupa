doctype html
html
	include includes/head
	body
		// CODE
		- var falso = 0;
		- var verdadero = 0;
		- var omisiones = 0;

		mixin datadisplay(dataset)
			for row in dataset
				if (row.Veredicto === "falso")
					- falso = falso + 1
				if (row.Veredicto === "verdadero")
					- verdadero = verdadero + 1
				if (row.Veredicto === "omisiones")
					- omisiones = omisiones + 1

		.menu
			ul
				li: a(href='acerca') Acerca de
		.container.center
